.main_chat
  .main_chat_group
    .main_chat_group-info
      = @group.name
    .main_chat_group-member
      Member: 
      - @group.users.each do |user|
        = user.name
    .main_chat_group-edit
      = link_to edit_group_path(@group) do
        %p Edit
  .main_chat_message
    = render @messages
  .main_chat_form
    .main_chat_form-input
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: "main_chat_form_content", placeholder: "type a message"
        .main_chat_form-input-type-image
          = f.label :image, class: "main_chat_form-form-image" do
            = icon("fas", "image", class: "icon")
            = f.file_field :image, class: "hidden"
        = f.submit "Send", class: "form__submit"
