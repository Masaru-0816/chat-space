.side_bar
  .side_bar_user
    .side_bar_user-name
      = current_user.name
    .side_bar_user-icon
      = link_to new_group_path do
        %i.fas.fa-edit
      = link_to edit_user_path(current_user.id) do
        %i.fa.fa-cog

  .side_bar_group
    = current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group_name
            = group.name
          .group_message
